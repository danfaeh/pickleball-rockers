<div class="container">

    <h2 class="text-center">Product Edit Section</h2><hr>

    <div id="products" class="row list-group">

        {{#each products}}
            <div class="item list-group-item col-xs-4 col-lg-4">
                <div class="thumbnail">
                    <img class="group list-group-image" src="../../public/images/products/1x/{{imageURL}}" alt="" />
                    <div class="caption">
                        <form method="POST" action="/products/edit/{{id}}">
                          <input type="text" class="hidden" value="{{id}}" name="id">                           
                          <div class="form-group">
                            <label>Name</label>
                            <input type="text" class="group inner" placeholder="Product Name" value="{{name}}" name="name">
                          </div>
                           <div class="form-group">
                            <label for="description">Description</label><br>
                            <textarea cols="70" rows="3" class="group inner" placeholder="Product Description" id="description" name="description">{{description}}</textarea>
                          </div>
                          <div class="form-group">
                            <label>Price</label>
                            <input type="text" class="group inner" placeholder="Price" value="{{price}}" name="price">
                          </div>
                          <div class="form-group">
                            <label>Image Storage Location</label>
                            <input type="text" class="group inner" placeholder="www.imgur.com/myimage" value="{{imgStorage}}" name="imgStorage">
                          </div>                          
                          <button type="submit" class="btn btn-primary">Update Product</button>
                          <button type="button" onclick="removeProduct()" class="btn btn-danger pull-right">Remove Product</button>
                        </form>
                    </div>
                </div>
            </div>
        {{/each}}

            {{!-- add new product --}}
            <div class="item list-group-item col-xs-4 col-lg-4">
                <div class="thumbnail">
                    <img class="group list-group-image" src="http://comps.canstockphoto.com/can-stock-photo_csp9810958.jpg" alt="" />
                    <div class="caption">
                        <form method="POST" action="/products/create">
                          <div class="form-group">
                            <label>Id</label>
                            <input type="text" class="group inner" placeholder="ex: colorado-paddle" name="id">
                          </div>                                                   
                          <div class="form-group">
                            <label>Name</label>
                            <input type="text" class="group inner" placeholder="ex: Colorado Paddle" name="name">
                          </div>
                           <div class="form-group">
                            <label for="description">Description</label><br>
                            <textarea cols="70" rows="3" class="group inner" placeholder="Write product description here" id="description" name="description">{{description}}</textarea>
                          </div>
                          <div class="form-group">
                            <label>Price</label>
                            <input type="text" class="group inner" placeholder="ex: 45.00" name="price">
                          </div>
                          <div class="form-group">
                            <label>Image Storage Location</label>
                            <input type="text" class="group inner" placeholder="www.imgur.com/myimage" name="imgStorage">
                          </div>                          
                          <button type="submit" class="btn btn-success">Create New Product</button>
                        </form>
                    </div>
                </div>
            </div>

    </div>
    
</div>