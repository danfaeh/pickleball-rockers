                        <div class="section" style="padding-bottom:20px;">
                            <br>
                            <label class="text-center">Quantity</label>                   
                            <div id="quantity">
                                <div class="btn-minus"><span class="glyphicon glyphicon-minus"></span></div>
                                <input id="itemQuantity" value="1" />
                                <div class="btn-plus"><span class="glyphicon glyphicon-plus"></span></div>
                            </div><br>

                            <div class="row">
                                <div class="col-xs-offset-1 col-xs-3">
                                    <label>Sex</label>
                                    <select id="sex" onchange="changeSex();">
                                      <option value="male">Male</option>
                                      <option value="female">Female</option>
                                    </select>
                                </div>

                                <div class="col-xs-offset-2 col-xs-3">
                                    <label>Color</label>
                                    <select id="womenColor" class="colorChoice" style="display:none;">
                                      <option value="heather-purple">Heather Purple</option>
                                      <option value="heather-gray">Heather Gray</option>
                                      <option value="gray-space-dye">Gray Space Dye</option>
                                      <option value="turquoise-space-dye">Turquoise Space Dye</option>
                                    </select>                                    
                                    <select id="menColor" class="colorChoice">
                                      <option value="heather-gray">Heather Gray</option>
                                      <option value="black-space-dye">Black Space Dye</option>
                                      <option value="black">Black</option>
                                      <option value="blue">Blue</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-xs-offset-1 col-xs-3">
                                    <label>Size</label>
                                    <select id="menSize">
                                      <option value="medium">medium</option>
                                      <option value="large">large</option>                    
                                      <option value="XL">XL</option>
                                      <option value="XXL">XXL</option>
                                    </select>
                                    <select id="womenSize" style="display:none;">
                                      <option value="medium">medium</option>
                                      <option value="large">large</option>                    
                                      <option value="XL">XL</option>
                                    </select>                                    
                                </div>

                                <div class="col-xs-offset-2 col-xs-3">
                                    <label>Placement</label>
                                    <select id="placement">
                                      <option value="left-shoulder">Left Shoulder</option>
                                      <option value="right-shoulder">Right Shoulder</option>
                                      <option value="center">Center</option>
                                      <option value="left-sleeve">Left Sleeve</option>
                                      <option value="right-sleeve">Right Sleeve</option>
                                    </select>
                                </div>
                            </div>  

                            <div class="row">

                                <div class="col-xs-offset-1 col-xs-5">
                                    <label>Custom Text?</label><br>
                                    <select id="logoChoice">
                                        <option value="Yes">Yes</option>
                                        <option value="No">No</option>
                                    </select>                                   
                                </div>

                                <div class="col-xs-5">
                                    <label>Logo</label>
                                    <select id="logoChoice">
                                        <option value="custom">As Pictured</option>
                                        <option value="PickleballRocker">Pickleball Rockers</option>
                                        <option value="PickleballLover">Pickleball Lover</option>
                                    </select>                                   
                                </div>

                            </div>                              



                            <div class="row">
                                <textarea name="Custom Lines" class="col-xs-offset-1" cols="50" rows="4" placeholder="Personalize Text: 3 lines, not to exceed 7 characters per line."></textarea>
                            </div>

                        </div>

                        <!-- Bottom of grey box -->
                        <div class="section" style="padding-bottom:20px;">
                            <button class="btn btn-success" onclick="addToCart('{{id}}','{{name}}','{{price}}');"><span style="margin-right:20px" class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>Add to Cart</button>
 {{!--                            <h6><a href="#"><span class="glyphicon glyphicon-heart-empty" style="cursor:pointer;"></span> Add to Favorites</a></h6> --}}

                        </div> 

                        <div id="itemAddText" style="display:none;">
                          <h4>Added to Cart!</h4> 
                          <a href="/cart" class="btn btn-primary">View Cart</a>                                      
                        </div>
                    </div>                              

