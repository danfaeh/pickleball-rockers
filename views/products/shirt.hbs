                        <img style="max-width:75%;" src="{{imgURL}}" />
                    </div>
                    <div class="col-xs-5" style="border:0px solid gray">
                        <!-- Product Name -->
                        <h3>{{name}}</h3>    

                        <!-- Price -->
                        <h6 class="title-price"><small>Price</small></h6>
                        <h3 style="margin-top:0px;">${{price}}</h3>                     

